{
  "version": "2.0.0",
  "tasks": [
    { 
      "label": "build ProblemSolving",
      "type": "shell",
      "command": "g++",
      "args": [
        "${workspaceFolder}/src/Main.cpp",
        "${workspaceFolder}/LeetCode_Problems/Easy/TwoSum1.cpp",
        "${workspaceFolder}/LeetCode_Problems/Easy/PalindromeNumber2.cpp",
        "${workspaceFolder}/LeetCode_Problems/Easy/RomanToInteger3.cpp",
        "-I", "${workspaceFolder}/Headers",
        "-o", "${workspaceFolder}/build/Main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiling C++ project (Problem Solving)"
    }
  ]
}
